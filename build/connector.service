[Unit]
Description=Bastion - Connector
After=env-lock.service docker.service bastion-etcd.service

# We don't require etcd because if etcd isn't up, the box is in a shitty state and we'll 
# want it to connect back to opsee if possible
Requires=env-lock.service docker.service

[Service]
EnvironmentFile=/etc/opsee/bastion-env.sh
Restart=always
User=core
TimeoutStartSec=0
RestartSec=5s
EnvironmentFile=/etc/opsee/bastion-env.sh
ExecStartPre=-/usr/bin/docker stop -t 5 %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull quay.io/opsee/gozer:latest
ExecStart=/usr/bin/docker run -p 4171:4171 -p 4000:4000 -p 4001:4001 --name=%p --env-file=/etc/opsee/bastion-env.sh --cap-add=NET_ADMIN --device=/dev/net/tun --volume=/gozer/state --link bastion-etcd:etcd --link nsqd:nsqd --dns=$DNS_SERVER quay.io/opsee/gozer:latest client
ExecStop=/usr/bin/docker stop -t 5 %p

[Install]
WantedBy=multi-user.target
