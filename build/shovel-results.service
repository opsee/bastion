[Unit]
Description=NSQ Shovel: Results
After=env-lock.service docker.service nsqd.service connector.service
Requires=env-lock.service docker.service nsqd.service connector.service
PartOf=connector.service

[Service]
Restart=always
EnvironmentFile=/etc/opsee/bastion-env.sh
User=core
TimeoutStartSec=0
RestartSec=5s
ExecStartPre=-/usr/bin/docker stop -t 5 %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull nsqio/nsq:v0.3.5
ExecStart=/usr/bin/docker run --name %p --net="container:connector" --device=/dev/net/tun nsqio/nsq:v0.3.5 /nsq_to_nsq --topic=results --channel=%p --nsqd-tcp-address=nsqd:4150 --destination-nsqd-tcp-address=nsqd.opsy.co:4150 --destination-topic=_.results
ExecStop=/usr/bin/docker stop -t 5 %p

[Install]
WantedBy=multi-user.target
