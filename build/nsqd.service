[Unit]
Description=nsqd
After=env-lock.service docker.service
Requires=env-lock.service docker.service

[Service]
Restart=always
User=core
TimeoutStartSec=0
RestartSec=5s
ExecStartPre=-/usr/bin/docker stop -t 5 %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull nsqio/nsq:v0.3.5
ExecStart=/usr/bin/docker run --name %p --expose 4150 --expose 4151 nsqio/nsq:v0.3.5 /nsqd
ExecStop=/usr/bin/docker stop -t 5 %p

[Install]
WantedBy=multi-user.target
